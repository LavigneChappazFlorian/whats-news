{% extends 'base.html.twig' %}

{% block title %}Informations du jour{% endblock %}

{% block body %}
<div class="container">
    <div class="features">
        <div class="container">
            <div class="feature">
                <section class="splide" aria-label="Splide Basic HTML Example">
                    <div class="splide__track">
                        <ul class="splide__list">
                            {% for schedule in schedules %}
                            <li class="splide__slide">
                                <div class="schedule-item">
                                    <h3>{{ schedule.day }} {{ schedule.date |format_datetime('medium', 'none', locale:
                                        'fr')}}</h3>
                                    <div class="item">
                                        <h3>Matin</h3>
                                        <p><strong>Matière :</strong> {{ schedule.morningSubject }}</p>
                                        <p><strong>Prof associé(e) :</strong> {{ schedule.morningTeacher }}</p>
                                    </div>
                                    <div class="item">
                                        <h3>Après-midi</h3>
                                        <p><strong>Matière :</strong> {{ schedule.afternoonSubject }}</p>
                                        <p><strong>Prof associé(e) :</strong> {{ schedule.afternoonTeacher }}</p>
                                    </div>
                                </div>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                </section>
            </div>
            <div class="feature">
                {% for flux in fun_fact_result|slice(0, 1) %}
                <h2>{{ flux.title }}</h2>
                <p>{{ flux.description }}</p>
                <small>Publié le {{ flux.pubDate|date('d-m-Y') }} - 20 minutes</small>
                {% endfor %}
            </div>
            <div class="feature">
                {% for flux in news_result|slice(0, 1) %}
                <h2>{{ flux.title }}</h2>
                <p>{{ flux.description }}</p>
                <small>Publié le {{ flux.pubDate|date('d-m-Y') }} - amiens.fr</small>
                {% endfor %}
            </div>
            <div class="feature">
                {% for flux in news_result|slice(1, 1) %}
                <h2>{{ flux.title }}</h2>
                <p>{{ flux.description }}</p>
                <small>Publié le {{ flux.pubDate|date('d-m-Y') }} - amiens.fr</small>
                {% endfor %}
            </div>

        </div>
    </div>
    {% endblock %}