{% extends 'base.html.twig' %}

{% block title %}Dashboard - Emplois du temps{% endblock %}

{% block body %}

<div class="dashboard-container">
    <h2>Tableau de bord - Emplois du temps</h2>
    <div class="schedule-list">
        {% for schedule in schedules %}
        <div class="schedule-item">
            <h3>{{ schedule.day }} {{ schedule.date |format_datetime('medium', 'none', locale: 'fr')}}</h3>
            <div class="item">
                <h3>Matin</h3>
                <p><strong>Matière :</strong> {{ schedule.morningSubject }}</p>
                <p><strong>Prof associé(e) :</strong> {{ schedule.morningTeacher }}</p>
            </div>
            <div class="item">
                <h3>Après-midi</h3>
                <p><strong>Matière :</strong> {{ schedule.afternoonSubject }}</p>
                <p><strong>Prof associé(e) :</strong> {{ schedule.afternoonTeacher }}</p>
            </div>
            <div class="schedule-btn">
                <a href="{{ path('app_dashboard_edit', {id: schedule.id}) }}">Modifier</a>
                <a href="{{ path('app_dashboard_delete', {id: schedule.id}) }}">Supprimer</a>
            </div>
        </div>
        {% endfor %}
    </div>
    <a href="{{ path('app_dashboard_create') }}">Ajouter un emploi du temps</a>
</div>
{% endblock %}